@model ASProjectProjector.ViewModels.CountyProfileViewModel

<h2>Profile</h2>

<hr/>

<h3>Quick Reference</h3>
    <h4>Total Funds Avaliable: @Html.DisplayFor(model => model.TotalBudget)</h4>
    <h4 class="expenses">Total Spending: @Html.DisplayFor(model => model.TotalProjectCost)</h4>
    <h4 class="donations">Total Donations: @Html.DisplayFor(model => model.TotalDonations)</h4><br>
    @if(Model.TotalProjectCost + Model.TotalDonations > Model.TotalBudget){
        <h4 class="expenses">Total Remaining: @Html.DisplayFor(model => model.RemainingBudget)</h4> 
    }else{
        <h4 class="donations">Total Remaining: @Html.DisplayFor(model => model.RemainingBudget)</h4> 
    }

<br>
<hr>
<h3>Active Projects</h3>
<div class="row">
    <div class ="col-md-3"><h5>Project Code Name</h5></div>
    <div class ="col-md-3 projDescription"><h5>Project Type</h5></div>
    <div class ="col-md-3 projDescription"><h5>Length In Days</h5></div>
    <div class ="col-md-3 projDescription"><h5>Family Name</h5></div>
</div>

@foreach (var item in Model.CountyProjectActive)
{
    <div class="row">
        <div class="col-md-3"><a asp-action="Detail" asp-controller="CountyProject" asp-route-id="@item.CountyProjectId">@Html.DisplayFor(modelItem => item.CodeName)</a></div>
        <div class="col-md-3 projDescription">@Html.DisplayFor(modelItem => item.ProjectType.Name)</div>
        <div class="col-md-3 projDescription">@Html.DisplayFor(modelItem => item.EstimatedLengthInDays)</div>
        <div class="col-md-3 projDescription">@Html.DisplayFor(modelItem => item.FamilyName)</div>
    </div>
}

<br>
<hr>

<h3>Saved Projects</h3>
<div class="row">
    <div class ="col-md-3"><h5>Project Code Name</h5></div>
    <div class ="col-md-3 projDescription"><h5>Project Type</h5></div>
    <div class ="col-md-3 projDescription"><h5>Length In Days</h5></div>
    <div class ="col-md-3 projDescription"><h5>Family Name</h5></div>
</div>
    @foreach (var item in Model.CountyProjectInactive)
    {
        <div class="row">
            <div class="col-md-3"><a asp-action="Detail" asp-controller="CountyProject" asp-route-id="@item.CountyProjectId">@Html.DisplayFor(modelItem => item.CodeName)</a></div>
            <div class="col-md-3 projDescription">@Html.DisplayFor(modelItem => item.ProjectType.Name)</div>
            <div class="col-md-3 projDescription">@Html.DisplayFor(modelItem => item.EstimatedLengthInDays)</div>
            <div class="col-md-3 projDescription">@Html.DisplayFor(modelItem => item.FamilyName)</div>
        </div>
    }
